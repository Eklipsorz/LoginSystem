{{#if enableInfoMessage}}
<div class="row justify-content-center mb-3">
  <div class="col-auto">
    <div class="mt-3 p-2 result-message" id="result-message">
      {{!-- message for showing a shortened URL --}}
      <p id="url-result">Incorrect username or password.</p>
      {{!-- copy button --}}
      <button class="btn delete-message-btn" id="delete-message-btn">x</button>
    </div>
  </div>
</div>

{{/if }}

<form method="POST" action="/login" class="login-form" id="login-form" novalidate>
  <h1 class="mb-3">Account Login</h1>
  <div class="input-group mb-3 email">
    <input class="form-control" type="email" name="email" placeholder="Email" required>
    <div class="valid-feedback">
      輸入正確
    </div>
    <div class="invalid-feedback">
      請輸入電子郵件
    </div>
  </div>


  <div class="input-group mb-3 password">
    <input class="form-control" type="password" name="password" placeholder="Password" required>
    <div class="invalid-feedback">
      請輸入密碼
    </div>
  </div>
  <button class="btn btn-primary" id="login-form-submit-btn">Sign in</button>

</form>

<script src="/javascripts/login.js"></script>